<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. HEADER / TÍTULO DE LA PANTALLA -->
    <TextView
        android:id="@+id/etPastillero"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_header_curved_gradient"
        android:text="Mis Turnos"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón ATRÁS (Anclado al header) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/outline_arrow_back_ios_24"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/etPastillero"
        app:layout_constraintTop_toTopOf="@+id/etPastillero"
        app:layout_constraintBottom_toBottomOf="@+id/etPastillero"
        tools:ignore="SpUsage" />


    <!-- 2. CAMPO: NOMBRE DEL TURNO -->
    <TextView
        android:id="@+id/etRemedioTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:text="Nombre del turno"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etPastillero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etRemedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_input_rounded"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/etRemedioTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:hint="Ej: Oftalmología Dr. García" />

    <!-- 3. CAMPOS: FECHA y HORA (DIVIDIDOS) -->
    <TextView
        android:id="@+id/etHoraInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Fecha"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etRemedio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etCada"
        app:layout_constraintHorizontal_weight="1" />

    <EditText
        android:id="@+id/etHoraInicioInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_input_rounded"
        android:padding="10dp"
        android:hint="DD/MM/AAAA"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/etHoraInicio"
        app:layout_constraintStart_toStartOf="@+id/etHoraInicio"
        app:layout_constraintEnd_toEndOf="@+id/etHoraInicio" />

    <TextView
        android:id="@+id/etCada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hora"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@+id/etHoraInicio"
        app:layout_constraintStart_toEndOf="@id/etHoraInicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <EditText
        android:id="@+id/etCadaInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_input_rounded"
        android:padding="10dp"
        android:hint="HH:MM"
        android:inputType="time"
        app:layout_constraintTop_toBottomOf="@id/etCada"
        app:layout_constraintStart_toStartOf="@+id/etCada"
        app:layout_constraintEnd_toEndOf="@+id/etCada" />


    <!-- 4. CAMPO: CON QUIÉN (PROFESIONAL) -->
    <TextView
        android:id="@+id/etPrescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:text="Con quién (Doctor/Especialidad)"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etHoraInicioInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etPrescripcionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_input_rounded"
        android:padding="10dp"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/etPrescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 5. NOTIFICACIÓN (SWITCH) -->
    <TextView
        android:id="@+id/etNotificacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Recibir Notificación"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etPrescripcionInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/switch1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@+id/etNotificacion"
        app:layout_constraintBottom_toBottomOf="@+id/etNotificacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etNotificacion" />
       <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reservar_turno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_button_gradient"
        android:text="AGREGAR"
        android:textColor="@android:color/white"
        android:textSize="15sp"
           android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/etNotificacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/eliminar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/eliminar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_button_gradient"
        android:text="ELIMINAR"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/btn_reservar_turno"
        app:layout_constraintBottom_toBottomOf="@id/btn_reservar_turno"
        app:layout_constraintStart_toEndOf="@id/btn_reservar_turno"
        app:layout_constraintEnd_toStartOf="@id/btn_cancelar_turno" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancelar_turno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_button_gradient"
        android:text="LIMPIAR"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/btn_reservar_turno"
        app:layout_constraintBottom_toBottomOf="@id/btn_reservar_turno"
        app:layout_constraintStart_toEndOf="@id/eliminar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 7. BOTTOM NAV BAR (Anclada al fondo de la pantalla) -->

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/bottom_nav_menu"
            app:labelVisibilityMode="labeled"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/btn_home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_medicina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/btn_medicina" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_mis_turnos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/btn_mis_turnos" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/btn_perfil" />
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>