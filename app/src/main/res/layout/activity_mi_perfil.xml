<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiPerfil">
    <TextView
        android:id="@+id/etMiPerfil"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_header_curved_gradient"
        android:text="Mi Perfil"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/adelanteMiP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/outline_arrow_back_ios_24"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:drawableTint="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/etMiPerfil"
        app:layout_constraintTop_toTopOf="@+id/etMiPerfil"
        app:layout_constraintBottom_toBottomOf="@+id/etMiPerfil"
        tools:ignore="SpUsage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/etbutton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_button_gradient"
        android:text="Informacion Personal"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:layout_marginTop="35dp"
        app:drawableTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etMiPerfil" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/etAdelante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="296dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/outline_arrow_forward_ios_24"
        android:textColor="@android:color/white"
        app:drawableTint="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@id/etbutton1"
        app:layout_constraintBottom_toBottomOf="@+id/etbutton1"
        app:layout_constraintStart_toStartOf="@+id/etbutton1"
        app:layout_constraintEnd_toEndOf="@+id/etbutton1"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpUsage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_button_gradient"
        android:text="Obra social"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etbutton1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/etAdelante2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="296dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/outline_arrow_forward_ios_24"
        android:textColor="@android:color/white"
        app:drawableTint="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@id/etbutton1"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpUsage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_button_gradient"
        android:text="Antecedentes Medicos"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button2"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/etAdelante3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="296dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/outline_arrow_forward_ios_24"
        android:textColor="@android:color/white"
        app:drawableTint="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@id/button3"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpUsage" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_button_gradient"
        android:text="Alergias"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button3"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/etAdelante4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="296dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/outline_arrow_forward_ios_24"
        android:textColor="@android:color/white"
        app:drawableTint="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@id/button4"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpUsage" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_button_gradient"
        android:text="Direccion"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="35dp" android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/etAdelante5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="296dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/outline_arrow_forward_ios_24"
        android:textColor="@android:color/white"
        app:drawableTint="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@id/button5"
        app:layout_constraintBottom_toBottomOf="@+id/button5"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="@+id/button5"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpUsage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_button_gradient"
        android:text="Contacto"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button5"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/etAdelante6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="296dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/outline_arrow_forward_ios_24"
        android:textColor="@android:color/white"
        app:drawableTint="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@id/button6"
        app:layout_constraintBottom_toBottomOf="@+id/button6"
        app:layout_constraintStart_toStartOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpUsage" />



    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/btn_home"
                    android:contentDescription="Inicio" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_medicina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/btn_medicina"
                    android:contentDescription="Pastillero" />
            </LinearLayout>

            <!-- ICONO 3: MIS TURNOS -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_mis_turnos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/btn_mis_turnos"
                    android:contentDescription="Mis Turnos" />
            </LinearLayout>

            <!-- ICONO 4: PERFIL -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/btn_perfil"
                    android:contentDescription="Perfil" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>


</androidx.constraintlayout.widget.ConstraintLayout>